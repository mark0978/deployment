<VirtualHost *:80>
    ServerAdmin {{ settings.ADMINS|slice:":1" }}}}

	ServerName {{ options.servername }}

        Alias /robots.txt  {{ settings.STATIC_ROOT }}/robots.txt
        Alias /favicon.ico {{ settings.STATIC_ROOT }}/favicon.ico
        Alias {{ settings.STATIC_URL }}      {{ settings.STATIC_ROOT }}/static/

        # Possible values include: debug, info, notice, warn, error, crit, alert, emerg.
        LogLevel info

        ErrorLog  ${APACHE_LOG_DIR}/{{ options.prefix }}-errors.log
        CustomLog ${APACHE_LOG_DIR}/{{ options.prefix }}.log combined
        ServerSignature Off

        WSGIDaemonProcess {{ options.prefix }} user={{ username }} processes={{ options.processes }} threads={{ options.threads}}
        WSGIProcessGroup  {{ options.prefix }}
        WSGIScriptAlias   / {{ wsgi_path }}

</VirtualHost>

